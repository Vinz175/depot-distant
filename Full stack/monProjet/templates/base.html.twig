<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        {# feuille de style css #}
        <link rel="stylesheet" href="{{ asset('CSS/style.css') }}">
        {# affichage des images show, + ... #}
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.1.1/css/all.css" 
            integrity="sha384-/frq1SRXYH/bSyou/HUp/hib7RVN1TawQYja658FEOodR/FQBKVqT9Ol+Oz3Olq5" 
            crossorigin="anonymous"/>
        {# feuille de style Bootstrap #}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <!-- Background image -->
        <img class="background mt-2" src="jaquettes/bg.png" title="logo" alt="logo" width="50%" height="auto">
    <!-- Background image -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="{{ path('app_accueil') }}">Accueil</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_profil') }}">Profil</a>
                    </li>
                        
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_form_index') }}">Discs</a>
                    </li>
            </ul>
                        {% if is_granted("ROLE_ADMIN") %}
                                <div class="dropdown">
                                    <a class="btn btn-success dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                       Administration
                                    </a>

                                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                            <a class="dropdown-item" href="{{ path('app_user_index') }}">Visualiser les utilisateurs</a>
                                            <a class="dropdown-item" href="{{ path('app_user_new') }}">Ajouter un utilisateur</a>
                                            {# <a class="dropdown-item" href="{{ path('app_user_delete') }}">Supprimer un utilisateur</a> #}
                                        </div>
                                </div>
                        {% endif %}
                
                
                    <li class="nav-link">
                        <a href="{{ path("app_profil")}}"><i class="fa-solid fa-user"></i></a>
                    </li>         
                    <li class="nav-link">
                        <a href="{{path('app_logout')}}">Se déconnecter</a>
                    </li>
                {# {% else %}
                        <li>
                            <a class="nav-link" href="{{ path("app_login") }}">Se connecter</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path("app_register") }}">S'enregistrer</a>
                        </li> #}
                {% endif %}
                
            
        </div>

    </nav>

<!-- affichage du message d'enregistrement d'un nouveau disque -->
 {% for message in app.flashes('success') %}
     <div class="alert alert-success">
         {{ message }}
     </div>
 {% endfor %}
 
        {% block body %}
        {% endblock %}
        
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    </body>
</html>
