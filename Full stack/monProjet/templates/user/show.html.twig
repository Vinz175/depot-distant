{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center">Visualisation d'un utilisateur</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Password</th>
                    <td>{{ user.password }}</td>
                </tr>
                <tr>
                    <th>IsVerified</th>
                    <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                </tr>
            </tbody>
        </table>

        <a class="btn btn-primary ml-4" href="{{ path('app_user_index') }}">Retour a la liste</a>

        <a class="btn btn-secondary" href="{{ path('app_user_edit', {'id': user.id}) }}">Editer</a>
        
        {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
