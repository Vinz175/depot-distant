{% extends 'base.html.twig' %}

{% block title %}Disc index{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center">Disc index</h1>
        {% if is_granted("ROLE_ADMIN") %}
            <a href="{{ path('app_form_new') }}"><i class="fa-solid fa-plus"></i></a>
        {% endif %}
    <table class="table">
        <thead>
            <tr>
                {% if is_granted("ROLE_ADMIN") %}
                    <th>Id</th>
                {% endif %}
                    <th>Artist</th>
                    <th>Title</th>
                    <th>Picture</th>
                    <th>Label</th>
                    <th>actions</th>
            </tr>
        </thead>
        <tbody>


        {% for disc in discs %}
        {# {% dump(disc) %}  #}
            <tr>
                {% if is_granted("ROLE_ADMIN") %}
                    <td>{{ disc.id }}</td>
                {% endif %}
                    <td>{{ disc.artist.name }}</td>
                    <td>{{ disc.title }}</td>
                    <td>{{ disc.picture }}</td>
                    <td>{{ disc.label }}</td>
                    <td>
                        <a href="{{ path('app_form_show', {'id': disc.id}) }}"><i class="fa-solid fa-eye"></i></a>
                        {% if is_granted("ROLE_ADMIN") %}
                        <a href="{{ path('app_form_edit', {'id': disc.id}) }}">edit</a>
                        {% endif %}
                    </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
{% endblock %}
