{% extends 'base.html.twig' %}

{% block title %}Disc{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center">Disc</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ disc.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ disc.title }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ disc.picture }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ disc.label }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary ml-4" href="{{ path('app_form_index') }}">Retour a la liste</a>

    <a class="btn btn-secondary" href="{{ path('app_form_edit', {'id': disc.id}) }}">Editer</a>

    {{ include('form/_delete_form.html.twig') }}
    </div>
{% endblock %}
